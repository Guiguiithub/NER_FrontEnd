@model MVC_Client.Models.InstallationSurfaceM

@{
    ViewData["Title"] = "InstallationSurface";
}

<h1>Saisie de mon installation privée</h1>
<h6><a asp-area="" asp-controller="Home" asp-action="Home">Home</a> > Installation privée</h6>

<div class="installationCreationBox">
    <form asp-action="InstallationSurface">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="length" class="control-label">Longueur [m]</label>
            <input asp-for="length" class="form-control" id="idlength" type="number" min="0" oninput="this.value = !!this.value && Math.abs(this.value) > 0 ? Math.abs(this.value) : null" />
            <span asp-validation-for="length" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="width" class="control-label">Largeur [m]</label>
            <input asp-for="width" class="form-control" id="idwidth" type="number" min="0" oninput="this.value = !!this.value && Math.abs(this.value) > 0 ? Math.abs(this.value) : null" />
            <span asp-validation-for="width" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="surface" class="control-label">Surface [m²]</label>
            <p asp-for="surface" class="form-control" type="number" id="idsurface"></p>
        </div>
        <div class="form-group text-right">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save
            </button>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    document.getElementById("idlength").addEventListener("change", calculateSurface);
    document.getElementById("idwidth").addEventListener("change", calculateSurface);


    function calculateSurface() {
        var length = document.getElementById("idlength").value;
        var width = document.getElementById("idwidth").value;
        var surface = length * width;

        if (surface > 0) {
            document.getElementById("idsurface").innerHTML = surface;
        }
        
    }
</script>
