@model MVC_Client.Models.NewInstallationM

@{
    ViewData["Title"] = "InstallationOrientation";
}

<h1>Saisie de mon installation privée</h1>

<h6><a asp-area="" asp-controller="Home" asp-action="Home">Home</a> > Installation privée</h6>
<hr />
<div class="row">
    <div class="col-md-3 no_padding">
        <div class="installationNav">
            <ul class="nav nav-pills flex-column mb-auto">
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="InstallationLocation" class="nav-lien">Location</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="InstallationType" class="nav-lien">Type</a>
                </li>
                <li>
                    <a href="#" class="nav-lien actif">Orientation</a>
                </li>
                <li>
                    <a href="#" class="nav-lien indisponible">Surface</a>
                </li>
                <li>
                    <a href="#" class="nav-lien indisponible">Details</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-md-6 no_padding">
        <form asp-action="InstallationOrientationD">
            <div class="installationCreationBox">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Description" type="hidden" />
                <input asp-for="Image" type="hidden" />
                <input asp-for="Street" type="hidden" />
                <input asp-for="No" type="hidden" />
                <input asp-for="PostCode" type="hidden" />
                <input asp-for="City" type="hidden" />
                <input asp-for="CoordinateX" type="hidden" />
                <input asp-for="CoordinateY" type="hidden" />
                <div class="form-group">
                    <label asp-for="AzimutOrientation" class="control-label">Orientation du champ (azimut) [°]</label>
                    <input asp-for="AzimutOrientation" class="form-control" type="number" min="0" max="360" />
                    <span asp-validation-for="AzimutOrientation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TiltOrientation" class="control-label">Inclinaison de la toiture [°]</label>
                    <input asp-for="TiltOrientation" class="form-control" type="number" min="10" max="90" />
                    <span asp-validation-for="TiltOrientation" class="text-danger"></span>
                </div>
                <input asp-for="EnergyType" type="hidden" />
                <input asp-for="IntegrationType" type="hidden" />
                <input asp-for="CellsType" type="hidden" />
                <input asp-for="Length" type="hidden" />
                <input asp-for="Width" type="hidden" />
            </div>
            <div class="form-group">
                <button><a class="noStyle" type="button" asp-area="" asp-controller="Home" asp-action="InstallationType">←</a></button>
                <input type="submit" value="→" class="droite borderTest" />
            </div>
        </form>
    </div>
</div>
